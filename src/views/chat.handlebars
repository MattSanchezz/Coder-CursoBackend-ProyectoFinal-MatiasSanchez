<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
</head>
<body>
    <h1>Chat</h1>
    <div id="chat-container">
        <div id="chat-messages">
            <!-- Aquí se mostrarán los mensajes -->
        </div>
        <input type="text" id="message-input" placeholder="Escribe un mensaje">
        <button id="send-button">Enviar</button>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const messageInput = document.getElementById("message-input");
            const sendButton = document.getElementById("send-button");
            const chatMessages = document.getElementById("chat-messages");
            
            function addMessageToChat(user, message) {
                const messageElement = document.createElement("div");
                messageElement.innerHTML = `<strong>${user}:</strong> ${message}`;
                chatMessages.appendChild(messageElement);
            }
            
            sendButton.addEventListener("click", () => {
                const usuario = "correoDelUsuario"; // Reemplaza por el usuario actual
                const mensaje = messageInput.value;
                if (usuario && mensaje) {
                    addMessageToChat(usuario, mensaje); // Agrega el mensaje localmente
                    messageInput.value = ""; // Borra el campo de entrada
                    // Luego, envía el mensaje al servidor
                    fetch("/enviar-mensaje", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify({ usuario, mensaje }),
                    })
                    .then((response) => response.json())
                    .then((data) => {
                        if (data.status !== "success") {
                            console.error("Error al guardar el mensaje:", data.message);
                        }
                    })
                    .catch((error) => {
                        console.error("Error al enviar el mensaje:", error);
                    });
                }
            });
        });
    </script>
</body>
</html>
